@model EducationalWebsite.ViewModels.TeacherVm
@{
    ViewBag.Title = "AddTeacher";
}
@Styles.Render("~/bundles/LibStudentcss")
<!-- main content -->
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Add Teacher</h2>
            <small class="text-muted">Welcome to school and college application</small>
        </div>
        @using (Html.BeginForm("AddTeacher", "Teacher", FormMethod.Post))
        {
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Basic Information<small>Description text here...</small> </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                        <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">

                                            @Html.TextBoxFor(m => m.Teacher.FirstName, new { @class = "form-control", @placeholder = "FirstName" })
                                        </div>


                                    </div>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">

                                            @Html.TextBoxFor(m => m.Teacher.LastName, new { @class = "form-control", @placeholder = "LastName" })


                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-3 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">

                                            @Html.TextBoxFor(m => m.Teacher.DateofBirth, "{0:dddd dd MMMM yyyy}", new { @class = "datepicker form-control", @placeholder = "Date of Birth" })




                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3 col-xs-12">
                                    <div class="form-group drop-custum">

                                        @Html.DropDownListFor(m => m.Teacher.GenderId, new SelectList(Model.Genders, "Id", "Type"), "select Gender", new { @class = "form-control show-tick" })


                                    </div>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <div class="form-line">

                                            @Html.TextBoxFor(m => m.Teacher.LastName, new { @class = "form-control", @placeholder = "Lastname" })


                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-xs-12">
    <div class="form-group">
        <div class="form-line">

            @Html.TextBoxFor(m => m.Teacher.LastName, new { @class = "form-control", @placeholder = "LastName" })


        </div>
    </div>
</div>
                                <div class="col-xs-12">
                                    <button type="submit" class="btn btn-raised g-bg-blush2">Submit</button>
                                    <button type="reset" class="btn btn-raised">reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
<!-- main content -->
@Scripts.Render("~/bundles/LibStudentjs")


